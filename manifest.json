{
  "manifest_version": 2,
  "name": "Zen Tab Sorterer Agent",
  "version": "1.2",
  "description": "Automatic tab sorting by domain (eTLD+1 â†’ SLD) and title; duplicate removal; hotkey Alt+S.",
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "sort-tabs": {
      "description": "Sort tabs by domain and title",
      "suggested_key": {
        "default": "Alt+S",
        "windows": "Alt+S",
        "linux": "Alt+S",
        "mac": "Alt+S"
      }
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zen-tab-sorter@example.com",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "512": "icons/icon-512.png"
  }
}

